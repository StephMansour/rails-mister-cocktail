<div class="container">
  <h1 class="text-center"><%= @cocktail.name %></h1>

  <p><%= link_to "add a dose" , new_cocktail_dose_path(@cocktail), class: "btn btn-danger"%></p>

  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> - <%= dose.ingredient.name %> <span><%= link_to "delete", dose_path(dose), method: :delete %></span></p>

  <% end %>


  <p><%= link_to "Back", cocktails_path %></p>
</div>
