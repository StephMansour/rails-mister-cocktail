<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> - <%= dose.ingredient.name %></p>
  <%= link_to "delete", dose_path(dose), method: :delete %>
<% end %>

<p><%= link_to "add a dose" , new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to "Back", cocktails_path %></p>
