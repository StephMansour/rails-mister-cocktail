<div class="banner" style="background-image: url(<%= image_path 'background.jpg' %>);">
  <div class="banner-content">
    <h1>Mister Cocktail</h1>
  </div>
</div>


<div class="cocktails padded">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-3">

        <%= link_to cocktail_path(cocktail), class: 'card-link' do %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo? ? cocktail.photo : 'herradura-tequila-mojito_kwulpb', height: 150, width: 200, crop: :fill %>');">
              <div class="card-description">
                <%= cocktail.name %>
              </div>
            </div>
        <% end %>

        </div>

      <% end %>
    </div>
  </div>
</div>

